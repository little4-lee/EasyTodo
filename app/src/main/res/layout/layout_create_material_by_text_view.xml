<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222">

    <android.inputmethodservice.ExtractEditText
            android:id="@+id/editTextCreateMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:hint="Type something..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:textStyle="bold"
            android:focusedByDefault="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonSendMaterial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="16dp" />

    <Button
            android:id="@+id/buttonSendMaterial"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"
            android:text="send"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/editTextCreateMaterial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/editTextCreateMaterial"
            app:layout_constraintTop_toTopOf="@id/editTextCreateMaterial" />

</androidx.constraintlayout.widget.ConstraintLayout>